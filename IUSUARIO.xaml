<Window x:Class="WpfApp1.IUSUARIO"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="IUSUARIO" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="115*"/>
            <RowDefinition Height="319*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="39*"/>
            <ColumnDefinition Width="161*"/>
        </Grid.ColumnDefinitions>
        <Rectangle Stroke="Black" Opacity="0.6" Grid.ColumnSpan="2" Margin="0,-299,0,1">
            <Rectangle.Fill>
                <ImageBrush ImageSource="/Background.jpg"/>
            </Rectangle.Fill>
        </Rectangle>
        <Button Content="TIENDA" HorizontalAlignment="Left" Margin="0,114,0,0" VerticalAlignment="Top" Width="Auto" MinWidth="160" Grid.ColumnSpan="2" Grid.RowSpan="2" Click="Button_Click_1" FontFamily="Bahnschrift"/>
        <Button Content="FAVORITOS" HorizontalAlignment="Left" Margin="160,114,0,0" VerticalAlignment="Top" Width="160" MinWidth="160" Grid.ColumnSpan="2" Grid.RowSpan="2" FontFamily="Bahnschrift"/>
        <Button Content="Nuevo Botón" HorizontalAlignment="Left" Margin="164,114,0,0" VerticalAlignment="Top" Width="160" MinWidth="160" Grid.RowSpan="2" Grid.Column="1"/>
        <Button Content="PERFIL" HorizontalAlignment="Left" Margin="324,114,0,0" VerticalAlignment="Top" Width="160" MinWidth="160" Grid.RowSpan="2" Grid.Column="1" FontFamily="Bahnschrift"/>
        <Button Content="CERRAR SESIÓN" HorizontalAlignment="Left" Margin="484,114,0,0" VerticalAlignment="Top" Width="160" MinWidth="160" Grid.RowSpan="2" Grid.Column="1" Click="Button_Click_2" FontFamily="Bahnschrift"/>
        <Label x:Name="lblSaludo" Content="BIENVENIDO" HorizontalAlignment="Center" Margin="0,40,0,0" VerticalAlignment="Top"/>


    </Grid>
</Window>
