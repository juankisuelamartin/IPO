			</ComboBox>


			<Label Content="Fecha de Nacimiento" HorizontalAlignment="Left" Margin="327,29,0,0" VerticalAlignment="Top" FontFamily="Bahnschrift" Foreground="White" Grid.Row="1" Grid.ColumnSpan="2"/>
