			<RowDefinition Height="40*"/>
		</Grid.RowDefinitions>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="211*"/>
			<ColumnDefinition Width="60*"/>
			<ColumnDefinition Width="145*"/>
			<ColumnDefinition Width="145*"/>
			<ColumnDefinition Width="60*"/>
			<ColumnDefinition Width="211*"/>
