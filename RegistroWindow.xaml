			<Label Content="Contraseña:" HorizontalAlignment="Left" Margin="83,137,0,0" VerticalAlignment="Top" FontFamily="Bahnschrift" Foreground="White" Height="31"/>
			<PasswordBox x:Name="PasswordBox" Height="23" Margin="83,160,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Width="168" Grid.RowSpan="2"/>

			<Label Content="Vuelva a escribir la contraseña:" HorizontalAlignment="Left" Margin="83,29,0,0" VerticalAlignment="Top" FontFamily="Bahnschrift" Foreground="White" Grid.Row="1" Width="183" FontSize="11"/>
			<PasswordBox x:Name="PasswordBox2" HorizontalAlignment="Left" Height="23" Margin="83,55,0,0" VerticalAlignment="Top" Width="168" Grid.Row="1"/>
			<StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Height="23" Margin="213,109,0,0" VerticalAlignment="Top" Width="168"/>

			<Label Content="Email:" HorizontalAlignment="Left" Margin="83,94,0,0" VerticalAlignment="Top" FontFamily="Bahnschrift" Foreground="White" Grid.Row="1"/>
			<TextBox x:Name="Email" HorizontalAlignment="Left" Height="23" Margin="83,118,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="168" Grid.Row="1"/>

			<Label Content="Nombre:" HorizontalAlignment="Left" Margin="327,70,0,0" VerticalAlignment="Top" FontFamily="Bahnschrift" Foreground="White"/>
			<TextBox x:Name="Nombre" HorizontalAlignment="Left" Height="23" Margin="327,97,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="168" Grid.ColumnSpan="3"/>

			<Label Content="Apellidos:" HorizontalAlignment="Left" Margin="327,137,0,0" VerticalAlignment="Top" FontFamily="Bahnschrift" Foreground="White" Height="33" Grid.RowSpan="2"/>
			<TextBox x:Name="Apellido" HorizontalAlignment="Left" Height="23" Margin="327,160,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="168" Grid.ColumnSpan="3" Grid.RowSpan="2"/>

			<Label Content="Calle:" HorizontalAlignment="Left" Margin="104,137,0,0" VerticalAlignment="Top" FontFamily="Bahnschrift" Foreground="White" Grid.Column="2" Height="33" Grid.RowSpan="2"/>
