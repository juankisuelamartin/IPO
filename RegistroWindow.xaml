			<Label Content="¿Ya tienes cuenta?" HorizontalAlignment="Left" Margin="0,184,0,0" VerticalAlignment="Top" FontFamily="Bahnschrift" Foreground="White" FontSize="14" Grid.Row="1" Grid.ColumnSpan="2" Grid.Column="1"/>
			<Button Content="Iniciar Sesión" HorizontalAlignment="Left" Margin="6,216,0,0" VerticalAlignment="Top" Width="112" Click="ButtonIniciar_Click" Height="30" BorderBrush="White" Background="White" Grid.Row="1" Grid.ColumnSpan="2" Grid.Column="1"/>

			<Button Content="Registrarse" HorizontalAlignment="Left" Margin="267,216,0,0" VerticalAlignment="Top" Width="112" Click="ButtonRegistrarse_Click" Height="30" BorderBrush="White" Background="White" Grid.Row="1" RenderTransformOrigin="0.527,-0.499"/>
