			<Button Name="ButtonAgregarFoto" Click="ButtonAgregarFoto_Click" Margin="113,118,81,107" Grid.Row="1" Grid.Column="2">foto de perfil</Button>

			<Label Content="Provincia:" HorizontalAlignment="Left" Margin="104,70,0,0" VerticalAlignment="Top" FontFamily="Bahnschrift" Foreground="White" Grid.Column="2"/>
